  <body>
<%- include("../includes/top-navbar"); %>
  <div class="container"> 
    <h1>Page Orders!</h1>

    <%if(orders.length){%>
      <ul class="list-group">

<% orders.forEach(order => { %>
<li class="list-group-item">
  <h3>#<%=order.id%></h3>
      <ul class="list-group">
<% order.products.forEach(pro => { %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <%= pro.title %>
    <span class="badge badge-primary badge-pill"><%=pro.orderitem.quantity%> X <%=pro.price%> </span>
    
  </li>
<% }); %>      
    </ul>
  </li>
<% }); %>      

    <% } %>
  </div>
