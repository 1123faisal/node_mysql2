<%- include("../includes/head"); %>

  </head>
  <body>
<%- include("../includes/top-navbar"); %>
   <br>
    <form action="/admin/<%= edit ? 'edit-product':'add-product' %> " method="POST">
    <div class="row">

      <%if(edit){%>
      <input type="hidden" name="id" value="<%= product.id %>">
      <%}%>

      <div class="col-4 offset-4">
      <div class="mt-2">
        <label for="">Title</label>  
        <input class="form-control" type="text" name="title" value="<%= edit ? product.title:'' %>" />
      </div>
      <div class="mt-2">
        <label for="">Image Url</label>  
        <input class="form-control" type="text" name="imgUrl" value="<%= edit ? product.imgurl:'' %>" />
      </div>
      <div class="mt-2">
        <label for="">Price</label>  
        <input class="form-control" type="number" step="0.01" name="price" value="<%= edit ? product.price:'' %>" />
      </div>
      <div class="mt-2">
        <label for="">Description</label>  
        <textarea class="form-control" type="text" name="desc" rows="5"><%= edit ? product.desc:'' %></textarea>
      </div>
      <br>
      <button class="btn btn-primary" type="submit"><%= edit ? 'Edit':'Add' %> product</button>
    </div>
  </div> 
    
    </form>
<%- include("../includes/footer"); %>
 
