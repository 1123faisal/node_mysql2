<%- include("../includes/head"); %>

  </head>
  <body>
<%- include("../includes/top-navbar"); %>
 
    <h1>My Products</h1>
    <div class="container">
      <div class="row">
        <% if(prods.length){ for(let pro of prods){ %>
        <div class="col-4">
          <div class="card">
            <img
              src="<%=pro.image%>"
              class="card-img-top"
              alt="..."
            />
            <div class="card-body">
              <h5 class="card-title"><%=pro.title %></h5>
              <h5 class="card-title">Rs. <%=pro.price %></h5>
              <p class="card-text">
               <%=pro.desc%>
              </p>
             <form action="/admin/delete-product" method="post">
              <a href="/admin/edit-product/<%=pro.id%>" class="btn btn-primary">Edit</a>
                <input type="hidden" name="id" value="<%=pro.id%>">
                <button class="btn btn-danger" type="submit">Delete</button>
             </form>
            </div>
          </div>
        </div>
        <% } } else { %>
        <h1>Products not Found!</h1>
        <% } %>
      </div>
    </div>
    <%- include("../includes/footer"); %>
